<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    tools:context="com.example.otp.ConnectWifiActivity" >

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:minHeight="64dp"
        android:minWidth="64dp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="400dp"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/switchontext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@drawable/logo"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_marginBottom="300dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/switchontext"
        android:visibility="invisible" />
    
    <ImageView
        android:id="@+id/nowifitext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@drawable/logo"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_marginBottom="300dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/nowifitext"
        android:visibility="invisible" />
    
    <ImageView
        android:id="@+id/connectingtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@drawable/logo"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_marginBottom="400dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/connectingtext1"
        android:visibility="invisible" />
    
    <Button
        android:id="@+id/findhotspotsbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/findhotspotsbutton"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/sponsor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginBottom="130dp"
        android:layout_marginTop="110dp"
        android:src="@drawable/sponsor"
        android:visibility="invisible" />

</RelativeLayout>